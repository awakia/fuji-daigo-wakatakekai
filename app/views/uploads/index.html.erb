<div class="column">
<h2 class="sub-head">アップロード一覧</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>カテゴリ</th>
      <th>ファイル名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.category %></td>
        <td><%= link_to upload.name, upload_path(upload) %></td>
        <td><%= button_to '削除', upload, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to '新規アップロード', new_upload_path %>
